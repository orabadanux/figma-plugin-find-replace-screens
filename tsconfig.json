{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma/plugin-typings"],
    "types": ["@figma/plugin-typings"],
    "lib": ["es2017"], // Remove "dom" here
    "skipLibCheck": true, // Optional: Prevent type checking in library files
    "outDir": "./dist"
  },
  "include": ["./code.ts"],
  "exclude": ["node_modules"]
}
